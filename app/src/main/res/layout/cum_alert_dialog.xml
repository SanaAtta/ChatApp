<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:text="      We need the desired permission to perform action"
        android:background="@color/black_dialogue"
        android:textColor="@color/white_dialogue"
        android:gravity="center_vertical" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/button_dialogue"
        android:layout_below="@id/txt_msg">
        <Button
            android:id="@+id/ok"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/button_text_dialogue"
            android:text="OK"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>