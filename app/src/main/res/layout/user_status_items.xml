<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_1"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/profile_image"
        app:srcCompat="@drawable/user_img"
        tools:ignore="VectorDrawableCompat" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:text="Username"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_toEndOf="@id/profile_image"
        android:textSize="18sp"
        android:layout_marginLeft="4dp" />






    <TextView
        android:id="@+id/time_chats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="4:52 PM"
        android:textSize="10sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/iv_eye"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_seen_eye"
        android:layout_toLeftOf="@id/time_chats"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_seen_times"
        android:layout_toLeftOf="@id/iv_eye"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/check_tick"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/username"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_check_black_24dp"
        tools:tint="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/profile_image"
        android:layout_marginLeft="10dp"
        tools:ignore="VectorDrawableCompat" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="5dp"
        android:text="ABC"
        android:id="@+id/last_msg"
        android:layout_toRightOf="@id/check_tick"
        android:textColor="@color/colorPrimaryDark"
        android:maxLines="1"
        />
</RelativeLayout>